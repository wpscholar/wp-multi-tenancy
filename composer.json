{
  "name": "wpscholar/wp-multi-tenancy",
  "description": "Setup a new WordPress multi-tenancy installation via Composer.",
  "license": "GPL-2.0+",
  "type": "project",
  "keywords": [
    "WordPress",
    "skeleton",
    "CMS",
    "blog",
    "composer",
    "wpackagist",
    "multi-tenant",
    "multi-tenancy"
  ],
  "authors": [
    {
      "name": "Micah Wood",
      "email": "micah@wpscholar.com",
      "homepage": "http://wpscholar.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/wpscholar/wp-multi-tenancy",
    "issues": "https://github.com/wpscholar/wp-multi-tenancy/issues"
  },
  "repositories": {
    "wpackagist": {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  },
  "require": {
    "johnpbloch/wordpress": "@stable",
    "composer/installers": "@stable"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ],
      "content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  }
}
